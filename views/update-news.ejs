<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Update Your News</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your news with thousands of web developers accross the world. Fill our form to get
            started.</p>
    </div>
</div>

<% if(news != '') { %>
<div class="row justify-content-center">




    <div class="col-8">
        <form action="/submit-news" enctype="multipart/form-data" method="POST">

            <div class="row g-3">

                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email"  class="form-control">
                </div>

                <div class="col-12">
                    <label for="name" class="form-label">News Title</label>
                    <input type="text" name="name" id="name" value=" <%- news.name %>" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="description" class="form-label">Description about news</label>
                    <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
                </div>

                <div class="col-12">
                    <label for="name" class="form-label">Reporter Details </label><br>
                    <small>Example:Published date of the news post/ Time /Reporter Name</small>
                    <div class="ingredientList">
                        <div class="ingredeintDiv mb-1">
                            <input type="text" name="ReportDetails" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+
                        Details </button>
                </div>

                <div class="col-12">
                    <label for="category">Select Category</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                        <option selected>Select Category</option>
                        <option value="Local">Local</option>
                        <option value="America">America</option>
                        <option value="China">China</option>
                        <option value="Japan">Japan</option>
                        <option value="India">India</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image">Product Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>

                <div class="col-12">
                    <label for="date" class="form-label">News Happened Date</label>
                    <input type="text" name="date" id="date" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="time" class="form-label">News Happened Time Arround</label>
                    <input type="text" name="time" id="time" class="form-control" required>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit News</button>
                </div>

            </div>

        </form>

    </div>
</div>

<% } else { %>
    <p>No item found.</p>
    <% } %>