<<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Job Vacancies</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Share your job opprtunies with thousands of job seekers accross the world. Fill our form to get started.</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/submit-media" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Job Title</label>
            <input type="text" name="name" id="name" class="form-control" place holder="Using key wrods, visitors may can reach your iages easily" required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Job Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4" placeholder="job over view / salary details / remote job or not" ></textarea>
          </div>
  
          <div class="col-12">
            <label for="jobrq" class="form-label">Job Requirments</label><br>
            <small>add requiments one by one</small>
            <div class="ingredientList">
              <div class="ingredeintDiv mb-1">
                <input type="text"  id="jobrq" name="ingredients" class="form-control">
              </div>
            </div>
          </div>
  
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Add Another</button>
          </div>
  
          <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category">
              <option selected>Select Job Category</option>
              <!-- all these job values added before to decide this path on job fileds -->
              <option value="Local">Software Engineering </option>
              <option value="Sports">Finance and Marketing</option>
              <option value="Global"> Medical</option>
              <option value="Weather">Agriculture </option>              
              <option value="Gossip">Education</option>
            </select>
          </div>
  
          <div class="col-12">
            <label for="image">Image Realted to Company or Job Preferances</label>
            <input type="file" class="form-control" name="image" id="image" accept="image/*">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>>